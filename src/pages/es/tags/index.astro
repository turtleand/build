---
import { getCollection } from 'astro:content';
import { buildTagSummaries, filterByLocale, filterPublished } from '../../../utils/blog';
import TagsPage from '../../../page-templates/TagsPage.astro';
import type { Locale } from '../../../utils/i18n';

const locale: Locale = 'es';
const posts = (await getCollection('posts')).filter(filterPublished).filter(filterByLocale(locale));
const tags = buildTagSummaries(posts).sort((a, b) => a.label.localeCompare(b.label));
---

<TagsPage locale={locale} basePath="/es" tags={tags} />
